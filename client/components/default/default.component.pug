main([class.show]="loaded")
  h1 Place Pup
  h2 Dev's best friend.

  section.top
    img(src='/805/300?id=' + Math.random())
    label
      .link http://placepup.com/800/300
      .size 800 x 300

  section.middle
    .big
      img(src='/500/250?msg=WOOF!&id=' + Math.random())
      label
        .link http://placepup.com/500/250?msg=WOOF!
        .size 500 x 250 (with text)

    .small
      img(src='/250/250/g?id=' + Math.random())
      label.bw
        .link http://placepup.com/250/250/g
        .size 250 x 250 + black &amp; white

  section.bottom
    .small
      img(src='/250/250?q=10&id=qual')
      label
        .link http://placepup.com/250/250?q=10
        .size 250 x 250 (10% quality)

    .big
      img(src='/500/250?q=30&id=qual')
      label
        .link http://placepup.com/500/250?q=30
        .size 500 x 250 (30% qualiy)
